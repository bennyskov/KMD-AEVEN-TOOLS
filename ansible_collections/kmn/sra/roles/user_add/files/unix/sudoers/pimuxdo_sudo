# DB offshore
# Limited to DB
# Manually update required from original database sudo templates if anything missing from here

# Oracle
%pimuxdo  ALL=(oracle) NOPASSWD: ALL
%pimuxdo  ALL=(root)   NOPASSWD: /opt/tivoli/tsm/client/oracle/bin64/tdpoconf *, /usr/bin/tdpoconf *

# MySQL
%pimuxdo  ALL=(mysql) NOPASSWD: ALL
%pimuxdo  ALL=(root)  NOPASSWD: /sbin/service mysql *

# Ingres
%pimuxdo  ALL=(ingres) NOPASSWD: ALL

# Sybase
%pimuxdo  ALL=(sybase) NOPASSWD: ALL

# Postgres
%pimuxdo  ALL=(postgres) NOPASSWD: ALL
%pimuxdo  ALL=(root)     NOPASSWD: /sbin/service postgresql restart

# DB2
#%pimuxdo  ALL=(db2*)  NOPASSWD: ALL
%pimuxdo  ALL=(root) NOPASSWD: /opt/ibm/db2/*/instance/*
%pimuxdo  ALL=(ALL)  NOPASSWD: /opt/OV/bin/opctemplate "", /opt/ibm/db2/*/install/db2_deinstall

