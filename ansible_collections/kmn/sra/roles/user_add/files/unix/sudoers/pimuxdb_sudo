# DB onshore
# Limited to DB
# Manually update required from original database sudo templates if anything missing from here

# Oracle
%pimuxdb  ALL=(oracle) NOPASSWD: ALL
%pimuxdb  ALL=(root)   NOPASSWD: /opt/tivoli/tsm/client/oracle/bin64/tdpoconf *, /usr/bin/tdpoconf *

# MySQL
%pimuxdb  ALL=(mysql) NOPASSWD: ALL
%pimuxdb  ALL=(root)  NOPASSWD: /sbin/service mysql *

# Ingres
%pimuxdb  ALL=(ingres) NOPASSWD: ALL

# Sybase
%pimuxdb  ALL=(sybase) NOPASSWD: ALL

# Postgres
%pimuxdb  ALL=(postgres) NOPASSWD: ALL
%pimuxdb  ALL=(root)     NOPASSWD: /sbin/service postgresql restart

# DB2
#%pimuxdb  ALL=(db2*)  NOPASSWD: ALL
%pimuxdb  ALL=(root) NOPASSWD: /opt/ibm/db2/*/instance/*
%pimuxdb  ALL=(ALL)  NOPASSWD: /opt/OV/bin/opctemplate "", /opt/ibm/db2/*/install/db2_deinstall

