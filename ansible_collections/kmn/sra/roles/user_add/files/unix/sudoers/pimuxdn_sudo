# DB Nearshore
# Limited to DB
# Manually update required from original database sudo templates if anything missing from here

# Oracle
%pimuxdn  ALL=(oracle) NOPASSWD: ALL
%pimuxdn  ALL=(root)   NOPASSWD: /opt/tivoli/tsm/client/oracle/bin64/tdpoconf *, /usr/bin/tdpoconf *

# MySQL
%pimuxdn  ALL=(mysql) NOPASSWD: ALL
%pimuxdn  ALL=(root)  NOPASSWD: /sbin/service mysql *

# Ingres
%pimuxdn  ALL=(ingres) NOPASSWD: ALL

# Sybase
%pimuxdn  ALL=(sybase) NOPASSWD: ALL

# Postgres
%pimuxdn  ALL=(postgres) NOPASSWD: ALL
%pimuxdn  ALL=(root)     NOPASSWD: /sbin/service postgresql restart

# DB2
#%pimuxdn  ALL=(db2*)  NOPASSWD: ALL
%pimuxdn  ALL=(root) NOPASSWD: /opt/ibm/db2/*/instance/*
%pimuxdn  ALL=(ALL)  NOPASSWD: /opt/OV/bin/opctemplate "", /opt/ibm/db2/*/install/db2_deinstall
%pimuxdn  ALL=(DB2) NOPASSWD: ALL
